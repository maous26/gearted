# Database
DATABASE_URL="postgresql://username:password@localhost:5432/gearted?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT Secrets
JWT_ACCESS_SECRET=your_super_secret_jwt_access_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_key_here_change_in_production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@gearted.com

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,exp://192.168.1.100:8081

# Socket.IO
SOCKET_CORS_ORIGIN=*

# Application URLs
FRONTEND_URL=http://localhost:3000
RESET_PASSWORD_URL=http://localhost:3000/reset-password
VERIFY_EMAIL_URL=http://localhost:3000/verify-email